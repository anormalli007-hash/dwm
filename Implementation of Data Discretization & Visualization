import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

# --- 1. Data Discretization (Equal-Width Binning) ---

# Generate some sample continuous data
np.random.seed(42)
data = np.random.randn(100) * 20 + 50  # 100 random numbers centered around 50

# Use pandas.cut to perform equal-width binning
# We will create 5 bins of equal size from the data range.
bins = pd.cut(data, bins=5)

print("--- Discretization Example ---")
print("First 10 original data points:")
print(data[:10].round(2))
print("\nFirst 10 data points after binning:")
print(bins[:10])


# --- 2. Visualization (Histogram) ---

print("\n--- Visualization ---")
# Create a histogram to visualize the binned data
plt.figure(figsize=(10, 6))
plt.hist(data, bins=5, color='skyblue', edgecolor='black')
plt.title('Histogram of Discretized Data (Equal-Width Bins)')
plt.xlabel('Value Bins')
plt.ylabel('Frequency (Count in Bin)')
plt.grid(axis='y', alpha=0.75)

# Show the plot
plt.show()
